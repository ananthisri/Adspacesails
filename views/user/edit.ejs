<div class="formcss">

<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
	<h2 class="form-signin-heading"> Hey, you're editing a user...</h2><br />

	<div class="textbox">

	<input value="<%= user.name %>" name="name" type="text" class="form-control" /><br />
	<input value="<%= user.cmpyname %>" name="cmpyname" type="text" class="form-control" /><br />
	<input value="<%= user.email %>" name="email" type="text" class="form-control" /><br /><br />

	</div>

	<% if(session.authenticated && session.User.admin) { %>
		<% if(user.admin) { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin" checked> Admin</label>
		<% } else { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin"> Admin</label>
		<% } %>
	<% } %>

	<input type="submit" value="proceed" class="btn btn-lg btn-primary btn-block" />
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>

</div>